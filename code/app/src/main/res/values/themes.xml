<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.MIUI工具箱" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.MIUI工具箱.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.MIUI工具箱.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Theme.MIUI工具箱.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<!-- Rikka Design! -->
	<style name="Default">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="Default.Option">
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingStart">10dp</item>
		<item name="android:paddingEnd">10dp</item>
		<item name="android:background">?android:attr/selectableItemBackground</item>
	</style>

	<style name="DefaultCard" parent="Widget.MaterialComponents.CardView">
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginStart">12dp</item>
		<item name="android:layout_marginEnd">12dp</item>
		<item name="cardCornerRadius">10dp</item>
	</style>

	<style name="DefaultCardHorizontal" parent="Widget.MaterialComponents.CardView">
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_marginStart">1dp</item>
		<item name="android:layout_marginEnd">1dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="cardCornerRadius">10dp</item>
	</style>

	<style name="DefaultImage">
		<item name="android:layout_width">28dp</item>
		<item name="android:layout_height">28dp</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_marginStart">20dp</item>
		<item name="android:layout_marginEnd">16dp</item>
	</style>

	<style name="DefaultText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="DefaultText.Option">
		<item name="android:paddingTop">21dp</item>
		<item name="android:paddingBottom">21dp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
	</style>

	<style name="DefaultText.Option.Card">
		<item name="android:textSize">18sp</item>
	</style>
</resources>